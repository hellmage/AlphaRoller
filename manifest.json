{
  "manifest_version": 3,
  "name": "AlphaRoller",
  "version": "1.0.0",
  "description": "Commit transactions of alpha symbols on Binance",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.binance.com/*",
    "https://binance.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.binance.com/*",
        "https://binance.com/*"
      ],
      "js": ["sidepanel.js", "transactions.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
